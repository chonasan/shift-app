
<div class="container">
     <div class='row'>
       <div class="col-lg-12">
           <div class="bg-light px-25 w-25 text-center">
            <h2 class="mt-2 mb-3">
          　　編集画面
          　</h2>
           </div>
       </div>
      </div>
 </div>

  <div class="container">

       　<%= form_with model: @employee, local:true do |f| %>

        <div class='row mb-1'>
          <div class="col-lg-2">
            氏名
          </div>
          <div class="col-lg-2">
            <%= f.text_field :first_name, placeholder:"名"%>
          </div>
          <div class="col-lg-2">
            <%= f.text_field :last_name, autofocus: true, id:"inputName", placeholder:"姓"%>
          </div>
        </div>

        <div class='row mb-1'>
          <div class="col-lg-2">
            フリガナ
          </div>
          <div class="col-lg-2">
            <%= f.text_field :first_name_kana, placeholder:"名カナ"%>
          </div>
          <div class="col-lg-2">
            <%= f.text_field :last_name_kana, placeholder:"姓カナ"%>
          </div>
        </div>

         <div class='row mb-1'>
           <div class="col-lg-2">
             郵便番号
           </div>
           <div class="col-lg-2">
            <%= f.text_field :postal_code, placeholder:"郵便番号"%>
           </div>
         </div>


         <div class='row mb-1'>
           <div class="col-lg-2">
            住所
           </div>
           <div class="col-lg-8">
             <%= f.text_field :address, size: 44, placeholder:"住所"%>
           </div>
         </div>

         <div class='row mb-1'>
           <div class="col-lg-2">
            電話番号
           </div>
           <div class="col-lg-2">
            <%= f.text_field :telephone_number, placeholder:"電話番号"%>
           </div>
        </div>

        <div class='row mb-1'>
           <div class="col-lg-2">
             メールアドレス
           </div>
           <div class="col-lg-2">
             <%= f.email_field :email, placeholder:"メールアドレス"%>
           </div>
         </div>



     <div class='row mt-4'>

       <div class="col-lg-4">
        <%= f.submit "編集内容を保存", class: " btn btn-success" %>
       </div>

     <% end %>

   </div>

