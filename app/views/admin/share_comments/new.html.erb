<div style="margin-top: 30px; margin-bottom:100px; ">
  <div class="container">
    <div class="row no-gutters">
      <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">
        <h5 class="text-dark bg-light p-4 mb-0">共有コメント投稿フォーム</h5>
        <div class="form-body p-4">
          <% if @share_comment.errors.any? %>
            <%= @share_comment.errors.count %>件のエラーが発生しました
            <% @share_comment.errors.full_messages.each do |message| %>
              <%= message %>
            <% end %>
          <% end %>


          <%= form_with model: @share_comment, url: admin_share_comments_path do |f| %>
            <%= f.attachment_field :image, class: "w-100" %>
            <div class="input-group mb-3 mt-4">
            </div>
            <%= f.text_area :comment, class:"form-control", rows:"3", placeholder:"コメントここに" %>
            <hr>
            <%= f.submit '投稿', class:"btn btn-lg btn-block btn-info mt-4" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
